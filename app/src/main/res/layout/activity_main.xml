<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Welcome"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.webianks.library.scroll_choice.ScrollChoice
        android:id="@+id/scroll_choice1"
        android:layout_width="0dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scroll_choice2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:scroll_atmospheric="true"
        app:scroll_background_color="#212121"
        app:scroll_indicator="true"
        app:scroll_indicator_color="@color/accent"
        app:scroll_item_text_color="@color/white"
        app:scroll_selected_item_background="#212121"
        app:scroll_selected_item_text_color="@color/white" />

    <com.webianks.library.scroll_choice.ScrollChoice
        android:id="@+id/scroll_choice2"
        android:layout_width="0dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scroll_choice3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scroll_choice1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:scroll_atmospheric="true"
        app:scroll_background_color="#212121"
        app:scroll_indicator="true"
        app:scroll_indicator_color="@color/accent"
        app:scroll_item_text_color="@color/white"
        app:scroll_selected_item_background="#212121"
        app:scroll_selected_item_text_color="@color/white"/>

    <com.webianks.library.scroll_choice.ScrollChoice
        android:id="@+id/scroll_choice3"
        android:layout_width="0dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scroll_choice2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:scroll_atmospheric="true"
        app:scroll_background_color="#212121"
        app:scroll_indicator="true"
        app:scroll_indicator_color="@color/accent"
        app:scroll_item_text_color="@color/white"
        app:scroll_selected_item_background="#212121"
        app:scroll_selected_item_text_color="@color/white"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_33k"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />


    <View
        android:id="@+id/view1"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginBottom="32dp"
        android:background="@color/accent"
        app:layout_constraintBottom_toTopOf="@+id/scroll_choice2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_choice2" />


</androidx.constraintlayout.widget.ConstraintLayout>